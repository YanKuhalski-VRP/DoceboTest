<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Standard_Instance_Owner</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Type__c , &quot;Standard Instance&quot;),ISBLANK(Account__c))</errorConditionFormula>
    <errorDisplayField>Account__c</errorDisplayField>
    <errorMessage>Standard instance must have owner</errorMessage>
</ValidationRule>
